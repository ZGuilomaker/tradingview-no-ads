{
  "manifest_version": 3,
  "name": "TradingView No ADS",
  "version": "1.2.0",
  "description": "Oculta o banner de anúncio que aparece sobre o gráfico do TradingView.",
  "author": "Guilherme Sena",
  "permissions": [
    "storage"
  ],
  "icons": {
    "128": "icons/icone.png"
  },
  "action": {
    "default_icon": {
      "128": "icons/icone.png"
    },
    "default_title": "Bloqueador TV",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tradingview.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ]
}